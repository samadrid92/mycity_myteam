<h1>You Made it to teams show page!</h1>

<h1><%= @team.team_name %></h1>
<div class="section grey">
  <div class=" row container">
    HI
  </div>
</div>
<%= hidden_field_tag 'cityId', value = @city.id %>
<%= hidden_field_tag 'teamId', value = @team.id %>

<div class="section white">
  <div class="row container">
    <h2 class="header">Parallax</h2>
    <p class="grey-text text-darken-3 lighten-3">Parallax is an effect where the background content or image in this case, is moved at a different speed than the foreground content while scrolling.</p>
  </div>
</div>

<div class="section grey">
  <div class="row container">
    HI
  </div>
</div>

<div class="section white">
  <div class="row container">
    <h2 class="header">Parallax</h2>
    <!-- modal trigger -->
    <a class="waves-effect waves-light btn modal-trigger" href="#modal1" data-target="#modal1">Create A Memory!</a>

    <!-- Modal Structure/create a new memory -->
    <div id="modal1" class="modal">
      <div class="modal-content">
        <h4>Add A Memory</h4>
        <%= form_for :memory, :url => city_team_memories_path(@city, @team) do |m| %>
          <%= m.text_field :name, placeholder: "Your Name" %>
          <%= m.text_area :description, placeholder: "Your Memory Of Team" %>
          <%= m.number_field :age, placeholder: "Your age" %>
          <%= m.date_field :date, placeholder: "When did this happen?" %>
          <%= m.text_field :hometown, placeholder: "Your Hometown" %>
          <%= m.submit "Save Team" %>
          <% end %>
      </div>
    </div>

    <%  @memories.each do |m|%>
    <tr class="memories-row" data-memory-name="<%= m.name  %>" data-memory-age="<%= m.age %>" data-memory-date="<%= m.date %>">
      <td class="memories-table"><%= m.name %></td>
      <td class="memories-table"><%= m.description %></td>
      <td class="memories-table"><%= m.age %></td>
      <td class="memories-table"><%= m.date %></td>
      <td class="memories-table"><%= m.hometown %></td>
    </tr>
    <% end %>

    <!-- Memory Graph -->
    <div id="scatter-plot" style="min-width: 310px; height: 400px; max-width: 800px; margin: 0 auto"></div>

  </div>
</div>


